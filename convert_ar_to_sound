# Convert Text to sound using given Arabic text
from gtts import gTTS
from playsound import playsound
x='السلام هليكم ورحمة الله وبركاته'
myvar=gTTS(text=x,lang="ar")
myvar.save('myfile.mp3')
playsound('myfile.mp3')

